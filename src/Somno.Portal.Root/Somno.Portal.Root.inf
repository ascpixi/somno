;
; Somno.Portal.Root.inf
;

[Version]
Signature="$WINDOWS NT$"
Class=System ; TODO: specify appropriate Class
ClassGuid={4d36e97d-e325-11ce-bfc1-08002be10318} ; TODO: specify appropriate ClassGuid
Provider=%ManufacturerName%
CatalogFile=Somno.Portal.Root.cat
DriverVer= ; TODO: set DriverVer in stampinf property pages
PnpLockdown=1

[DestinationDirs]
DefaultDestDir = 12
Somno.Portal.Root_Device_CoInstaller_CopyFiles = 11

[SourceDisksNames]
1 = %DiskName%,,,""

[SourceDisksFiles]
Somno.Portal.Root.sys  = 1,,
WdfCoInstaller$KMDFCOINSTALLERVERSION$.dll=1 ; make sure the number matches with SourceDisksNames

;*****************************************
; Install Section
;*****************************************

[Manufacturer]
%ManufacturerName%=Standard,NT$ARCH$

[Standard.NT$ARCH$]
%Somno.Portal.Root.DeviceDesc%=Somno.Portal.Root_Device, Root\Somno.Portal.Root ; TODO: edit hw-id

[Somno.Portal.Root_Device.NT]
CopyFiles=Drivers_Dir

[Drivers_Dir]
Somno.Portal.Root.sys

;-------------- Service installation
[Somno.Portal.Root_Device.NT.Services]
AddService = Somno.Portal.Root,%SPSVCINST_ASSOCSERVICE%, Somno.Portal.Root_Service_Inst

; -------------- Somno.Portal.Root driver install sections
[Somno.Portal.Root_Service_Inst]
DisplayName    = %Somno.Portal.Root.SVCDESC%
ServiceType    = 1               ; SERVICE_KERNEL_DRIVER
StartType      = 3               ; SERVICE_DEMAND_START
ErrorControl   = 1               ; SERVICE_ERROR_NORMAL
ServiceBinary  = %12%\Somno.Portal.Root.sys

;
;--- Somno.Portal.Root_Device Coinstaller installation ------
;

[Somno.Portal.Root_Device.NT.CoInstallers]
AddReg=Somno.Portal.Root_Device_CoInstaller_AddReg
CopyFiles=Somno.Portal.Root_Device_CoInstaller_CopyFiles

[Somno.Portal.Root_Device_CoInstaller_AddReg]
HKR,,CoInstallers32,0x00010000, "WdfCoInstaller$KMDFCOINSTALLERVERSION$.dll,WdfCoInstaller"

[Somno.Portal.Root_Device_CoInstaller_CopyFiles]
WdfCoInstaller$KMDFCOINSTALLERVERSION$.dll

[Somno.Portal.Root_Device.NT.Wdf]
KmdfService =  Somno.Portal.Root, Somno.Portal.Root_wdfsect
[Somno.Portal.Root_wdfsect]
KmdfLibraryVersion = $KMDFVERSION$

[Strings]
SPSVCINST_ASSOCSERVICE= 0x00000002
ManufacturerName="<Your manufacturer name>" ;TODO: Replace with your manufacturer name
DiskName = "Somno.Portal.Root Installation Disk"
Somno.Portal.Root.DeviceDesc = "Somno.Portal.Root Device"
Somno.Portal.Root.SVCDESC = "Somno.Portal.Root Service"
